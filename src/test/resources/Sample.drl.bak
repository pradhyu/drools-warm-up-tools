package com.sample
 
import com.sample.*;
 
rule "Hello World"
    when
        p : Person( age < 30 && name == "John" )
        e : Employee( age < p.age )
        p2 : Person( age < e.age, name == "George" )
    then
        System.out.println( "Hello, " + p.getName() );
        System.out.println( "Hello, " + e.getName() );
        System.out.println( "Hello, " + p2.getName() );
end



rule "Hello Ringo"
    when
        p : Person( age < 30 && name == "Ringo" )
    then
        System.out.println( "Hello, " + p.getName() );
end

rule "Hello no one"
    when
        p : Person( age > 100 || name == "No one" )
    then
        System.out.println( "Hello, " + p.getName() );
end

rule "Hello accumulate"
    when
        $active : Number( this >= 1 ) from accumulate( $a : Person( age < 25), count( $a ) )
    then
        System.out.println( "accumulate --> " + $active );
end

